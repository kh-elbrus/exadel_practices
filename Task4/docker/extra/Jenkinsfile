pipeline {
    agent { 
        docker {
            image 'ubuntu'
            args  '-v /tmp:/tmp -u root:sudo -v /var/run/docker.sock:/var/run/docker.sock -v $(which docker):/usr/bin/docker'
        } 
    }
    environment {
        PASSWORD = credentials('JENKINS-SECRET-TEXT')
    }
    stages {
        stage('Build docker image') {
            steps {
                sh 'docker build -f ./Task4/docker/extra/Dockerfile -t web-service-flask'
            }
        }
        stage('Run docker image') {
            steps {
                sh 'docker run -d -p 5000:5000 -t web-service-flask'
            }
        }
        stage('Chech running containers') {
            steps {
                sh 'docker ps -a'
            }
        }
    }
}