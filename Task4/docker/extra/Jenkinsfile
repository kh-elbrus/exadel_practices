pipeline {
    agent { 
        docker {
            image 'ubuntu'
            args  '-v /tmp:/tmp -u root:sudo -v /var/run/docker.sock:/var/run/docker.sock -v $(which docker):/usr/bin/docker'
        } 
    }
    environment {
        PASSWORD = credentials('JENKINS-SECRET-TEXT')
    }
    stages {
        stage('Build docker image') {
            steps {
                sh 'sudo docker build -f ./Task4/docker/extra/Dockerfile -t flask-app'
            }
        }
        stage('Chech running containers') {
            steps {
                sh 'sudo docker run -p 5000:5000 --name flask-app -d flask-app'
            }
        }
    }
}