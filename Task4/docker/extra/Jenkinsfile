pipeline {
    agent { 
        dockerfile {
            filename './Task4/docker/extra/Dockerfile'
            additionalBuildArgs '--tag flask-app'
            args  '-v /tmp:/tmp -u root:sudo -v $(which docker):/usr/bin/docker -v /var/run/docker.sock:/var/run/docker.sock'
        } 
    }
    environment {
        PASSWORD = credentials('JENKINS-SECRET-TEXT')
    }
    stages {
        stage('Curl to flask') {
            steps {
                sh 'curl localhost:5000'
            }
        }
    }
}