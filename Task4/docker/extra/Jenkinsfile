pipeline {
    agent { 
        dockerfile {
            filename './Task4/docker/extra/Dockerfile'
            additionalBuildArgs  '--tag web-service-flask'
            args '-u root:sudo'
        } 
    }
    environment {
        PASSWORD = credentials('JENKINS-SECRET-TEXT')
    }
    stages {
        stage('Run container') {
            steps {
                sh 'docker run -d -p 0.0.0.0:5000:5000 --tag web-service-flask'
            }
        }
        stage('Check running containers') {
            steps {
                sh 'docker ps -a'
            }
        }
    }
}