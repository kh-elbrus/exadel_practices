pipeline {
    agent { 
        dockerfile {
            filename './Dockerfile'
        } 
    }
    stages {
        stage('Update repo list') {
            steps {
                sh 'apt update -y'
            }
        }
        stage('Install curl') {
            steps {
                sh 'apt install curl -y'
            }
        }
        stage('Test') {
            steps {
                sh 'python3 --version'
                sh 'curl localhost:5000'
            }
        }
    }
}