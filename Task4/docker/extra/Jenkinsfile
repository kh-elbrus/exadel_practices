pipeline {
    agent {
        label 'agent-1'
    }
    stages {
        stage('Install docker into agent') {
            steps {
                sh '''
                    sudo apt update -y
                    sudo apt install curl -y
                    sudo curl https://get.docker.com/ > dockerinstall && chmod 777 dockerinstall && ./dockerinstall
                    sudo docker ps -a
                '''
                }
            }
        stage('Build docker image') {
            steps {
                 sh 'sudo docker build -f ./Task4/docker/extra/Dockerfile --tag flask-app'
            }
        }
        stage('Run docker image') {
            steps {
                sh 'sudo docker run -p 5000:5000 -d flask-app'
            }
        }
        stage('Getting docker ps') {
            steps {
                sh 'sudo docker ps -a'
            }
        }
        stage('Check working web service') {
            steps {
                sh 'curl http://0.0.0.0:5000'
            }
        }
    }
}